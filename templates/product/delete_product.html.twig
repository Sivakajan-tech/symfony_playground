{% extends 'base.html.twig' %}

{% block title %}Delete ProductController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
</style>

<div class="example-wrapper">
    <h1>Delete the product from here...</h1>
    <p>Are you sure want to delete the product with the id  {{ id }} </p>
    <form method="post">
        <button> Delete </button>
        <a href="{{path('product_show', {'id': id}) }}">Cancel</a>
    </form>
   
    <p> To go to the Product page <a href="{{path('product') }}">Click Here</a></p>
</div>
{% endblock %}
